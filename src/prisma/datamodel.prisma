type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String!
  info: String!
  content: String
  author: User! @relation(name:"UserPosts")
}
type User {
  id: ID! @id
  created_at: String
  updated_at: String
  discourseId: Int
  auth0Id: String! @unique 
  metaData: String 
  identity: String
  email: String @unique
  name: String 
  password: String
  nickname: String 
  guestCheckIns: Int @default(value: 0)
  eblID: String 
  profileStatus: ProfileStatus @default(value: PUBLIC)
  avatar: String 
  goals: [Goal] @relation(name: "UserToGoals")
  userInfo: FormData @relation(link: INLINE)
  journal: [JournalEntry] @relation(name: "UserJournal")
  points: Int! @default(value: 0)
  friends: [User!]! @relation(name: "FriendsOfUser", link: TABLE)
  status: UserStatus @default(value: OFFLINE)  
  posts: [Post!]! @relation(name: "UserPosts")
  following: [User] @relation(name: "FollowingUsers", link: TABLE)
  tier: TIER! @default(value: FREE)
  role: Role @default(value: USER)
}
enum TIER {
  FREE
  CONTRIBUTER
  PREMIUM
}
type Goal {
  id: ID! @id
  title: String!
  startDate: DateTime! @startDate
  projectedCompletionDate: DateTime! @projectedCompletionDate
  actualCompletionDate: DateTime! @actualCompletionDate
  pointsWorth: Int!
  pointsEarned: Int!
  pointsDeducted: Int!
  description: String!
  author: User! @relation(name: "UserToGoals", link: INLINE)
}

enum UserStatus {
  ONLINE
  UNAVAILABLE
  OFFLINE
}
enum ProfileStatus {
  PUBLIC
  PRIVATE
  FRIENDSONLY
  DEACTIVATED
}
type JournalEntry {
  id: ID! @id
  createdAt: DateTime! @createdAt
  title: String!
  shared: Boolean! @default(value: false)
  content: String!
  author: User! @relation(name: "UserJournal", link: INLINE)
}

type AuthPayload {
  id: ID! @id
  token: String!
  user: User!
}
type FormData {
  id: ID! @id
  createdAt: DateTime! @createdAt
  email: String! @unique
  name: String! 
  nickname: String! @unique
  Q1: String
  Q2: String
  Q3: String
  Q4: Question @default(value: CHOICE1)
}

enum Question {
  CHOICE1
  CHOICE2
  CHOICE3
  CHOICE4
}

enum Role {
  ADMIN
  USER
}