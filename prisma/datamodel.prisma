type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String!
  content: String!
  author: User!
}

type User {
  id: ID! @id
  eblID: String!
  goals: [Goal] @relation(name: "UserToGoals")
  email: String! @unique
  password: String!
  name: String!
  points: Int! @default(value: 0)
  posts: [Post!]!
}

type Goal {
  id: ID! @id
  title: String!
  startDate: DateTime!
  projectedCompletionDate: DateTime!
  actualCompletionDate: DateTime!
  pointsWorth: Int!
  pointsEarned: Int!
  pointsDeducted: Int!
  description: String!
  author: User! @relation(name: "UserToGoals")
}